.movable-area{
  pointer-events:none;
  /* 这个属性设置为none,让所有事件穿透过去 */
  z-index: 1999999999900000;
  width: 100%;
  height: 100vh;
  position: fixed;
  position: fixed;
  /* top:80%; */
  left: -70rpx;
 }
 .movable-view{
  pointer-events:auto;
  /* 重设为auto,覆盖父属性设置  宽高要跟图片大小一致*/
  height: 160rpx;
  width: 160rpx;
  margin-top: 150%;
